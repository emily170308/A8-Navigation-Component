package com.example.bibliotecadigital.ui

import android.os.Bundle
import android.view.*
import androidx.fragment.app.Fragment
import androidx.navigation.fragment.navArgs
import com.example.bibliotecadigital.databinding.FragmentDetalheLivroBinding

class DetalheLivroFragment : Fragment() {
    private var _binding: FragmentDetalheLivroBinding? = null
    private val binding get() = _binding!!
    private val args: DetalheLivroFragmentArgs by navArgs()

    override fun onCreateView(inflater: LayoutInflater, container: ViewGroup?, savedInstanceState: Bundle?): View {
        _binding = FragmentDetalheLivroBinding.inflate(inflater, container, false)
        return binding.root
    }

    override fun onViewCreated(view: View, savedInstanceState: Bundle?) {
        super.onViewCreated(view, savedInstanceState)
        binding.textDetalhe.text = "Detalhes do livro ID: ${args.livroId}"
    }

    override fun onDestroyView() {
        super.onDestroyView()
        _binding = null
    }
}
